<%- if flash.any? %>
  <%- flash.keys.each do |flash_key| %>
    <%- next if flash_key.to_s == 'timedout' %>
    <div class="alert-message <%= flash_key %>">
      <%= flash.discard(flash_key) %>
    </div>
  <%- end %>
<%- end %>

<h1>Input Username</h1>

<%= form_tag( { :method => :post }) do %>
  <%= text_field :user, :id %>
<% end %>

<br>

<% if @photos %>
  <% @photos.each do |photo| %>
    <%= image_tag("https://farm#{photo["farm"]}.staticflickr.com/#{photo["server"]}/#{photo["id"]}_#{photo["secret"]}_q.jpg") %>
  <% end %>
<% end %>